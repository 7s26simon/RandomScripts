<body>
  <h1>Random Team Picker</h1>
  <div class="container">
    <div>
      <p>Enter one name per line:</p>
      <textarea id="namesInput" placeholder="Alice&#10;Bob&#10;Charlie&#10;Dana"></textarea>
      <button id="startBtn">Split into Team A and Team B</button>
    </div>
    <div>
      <div class="teams">
        <div class="team">
          <h2>Team A</h2>
          <ul id="teamA"></ul>
        </div>
        <div class="team">
          <h2>Team B</h2>
          <ul id="teamB"></ul>
        </div>
      </div>
      <div class="stage">
        <div class="hat">
          <div class="hat-brim"></div>
          <div class="hat-crown"></div>
          <div class="hat-band"></div>
          <div id="slip" class="slip"></div>
        </div>
      </div>
      <div id="status" class="status"></div>
    </div>
  </div>

  <script>
    const startBtn = document.getElementById("startBtn");
    const namesInput = document.getElementById("namesInput");
    const teamAList = document.getElementById("teamA");
    const teamBList = document.getElementById("teamB");
    const slip = document.getElementById("slip");
    const statusText = document.getElementById("status");

    function shuffle(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
      return array;
    }

    function pickTeams(names) {
      const shuffled = shuffle([...names]);
      const half = Math.ceil(shuffled.length / 2);
      return {
        teamA: shuffled.slice(0, half),
        teamB: shuffled.slice(half)
      };
    }

    function clearTeams() {
      teamAList.innerHTML = "";
      teamBList.innerHTML = "";
    }

    function addMember(liParent, name) {
      const li = document.createElement("li");
      li.textContent = name;
      liParent.appendChild(li);
    }

    function animateDrawSequence(names) {
      clearTeams();
      statusText.textContent = "Drawing names from the hat...";
      slip.textContent = "";
      slip.style.opacity = 0;

      // Randomize order and pre-compute team assignment
      const shuffled = shuffle([...names]);
      const assignments = [];
      const half = Math.ceil(names.length / 2);

      shuffled.forEach((name, index) => {
        const team = index < half ? "A" : "B";
        assignments.push({ name, team });
      });

      let index = 0;
      startBtn.disabled = true;

      function drawNext() {
        if (index >= assignments.length) {
          statusText.textContent = "All names have been assigned!";
          startBtn.disabled = false;
          return;
        }

        const { name, team } = assignments[index];

        // Trigger slip animation with current name
        slip.classList.remove("animate");
        void slip.offsetWidth; // force reflow so animation restarts
        slip.textContent = name;
        slip.classList.add("animate");

        // After animation, place name into team list
        setTimeout(() => {
          if (team === "A") {
            addMember(teamAList, name);
          } else {
            addMember(teamBList, name);
          }
          index++;
          drawNext();
        }, 1500); // slightly longer than animation duration
      }

      drawNext();
    }

    startBtn.addEventListener("click", () => {
      const raw = namesInput.value
        .split("\n")
        .map(s => s.trim())
        .filter(s => s.length > 0);

      if (raw.length < 2) {
        alert("Please enter at least 2 names.");
        return;
      }

      animateDrawSequence(raw);
    });
  </script>
</body>
</html>
